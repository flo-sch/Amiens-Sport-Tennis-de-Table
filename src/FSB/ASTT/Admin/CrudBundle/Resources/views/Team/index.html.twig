{% extends('FSBASTTAdminCrudBundle::layout.html.twig') %}

{% block main %}
    <h1>Liste des équipes</h1>
    
    <a class="btn btn-primary" href="{{ path('team_new') }}">Ajouter une équipe</a>
    <table class="records_list table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Genre</th>
                <th>Division</th>
                <th>Joueurs</th>
                <th>Lien officiel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.civility }}</td>
                <td>{{ entity.division }}</td>
                <td>{{ entity.nbPlayers }}</td>
                <td><a class="btn btn-info" href="{{ entity.officialLink }}" title="Voir les résultats officiels" target="_blank">Lien officiel FFTT</a></td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary" href="{{ path('team_show', { 'id': entity.id }) }}">Détail</a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="{{ path('team_edit', { 'id': entity.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a class="btn btn-primary" href="{{ path('team_new') }}">Ajouter une équipe</a>
{% endblock %}