{% extends('FSBASTTAdminCrudBundle::layout.html.twig') %}

{% block main %}
    <h1>Liste des lettres du club</h1>
    
    <a class="btn btn-primary" href="{{ path('letter_new') }}">Ajouter une lettre</a>
    
    <table class="records_list table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Fichier associé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('letter_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.date %}{{ entity.date|date('d/m/Y') }}{% endif%}</td>
                <td>{{ entity.file }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('letter_show', { 'id': entity.id }) }}">Détail</a>
                        </li>
                        <li>
                            <a href="{{ path('letter_edit', { 'id': entity.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a class="btn btn-primary" href="{{ path('letter_new') }}">Ajouter une lettre</a>
{% endblock %}