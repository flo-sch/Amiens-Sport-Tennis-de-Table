{% extends('FSBASTTAdminCrudBundle::layout.html.twig') %}

{% block main %}
    <h1>Liste des résumés des compétitions</h1>
    
    <table class="records_list table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Evénement</th>
                <th>Type</th>
                <th>Compétition</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('summary_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.event }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.tournament }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif%}</td>
                <td>{{ entity.description[0:300]|e('html')|nl2br }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('summary_show', { 'id': entity.id }) }}">Détail</a>
                        </li>
                        <li>
                            <a href="{{ path('summary_edit', { 'id': entity.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('summary_new') }}">Ajouter un résumé de compétition</a>
{% endblock %}