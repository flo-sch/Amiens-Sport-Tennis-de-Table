    <a class="btn btn-primary" href="{{ path('interview_new') }}">Ajouter une interview</a>
    <table class="records_list table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('interview_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description[0:300]|e('html')|nl2br }}[...]</td>
                <td>{% if entity.date %}{{ entity.date|date('d/m/Y H:i:s') }}{% endif%}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary" href="{{ path('interview_show', { 'id': entity.id }) }}">DÃ©tail</a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="{{ path('interview_edit', { 'id': entity.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a class="btn btn-primary" href="{{ path('interview_new') }}">Ajouter une interview</a>
{% endblock %}